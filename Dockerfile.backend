FROM python:3.10-slim

WORKDIR /app

# System deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# ----------------------------
# Install CPU‑only ML stack
# ----------------------------

# PyTorch CPU
RUN pip install --no-cache-dir torch==2.2.0 --index-url https://download.pytorch.org/whl/cpu

# Transformers CPU‑only
RUN pip install --no-cache-dir transformers==4.37.2 --no-deps

# SentenceTransformers CPU‑only
RUN pip install --no-cache-dir sentence-transformers==2.2.2 --no-deps

# Remaining deps (no GPU)
RUN pip install --no-cache-dir \
    numpy \
    pydantic \
    pydantic-settings \
    qdrant-client \
    rank-bm25 \
    langchain \
    langchain-community \
    langchain-core \
    langchain-huggingface \
    langchain-ollama \
    langchain-openai \
    langchain-qdrant \
    python-docx \
    docling \
    httpx \
    fastapi \
    uvicorn

# ----------------------------
# Install your project
# ----------------------------
COPY src ./src
COPY config ./config
COPY pyproject.toml ./

RUN pip install --no-deps .

EXPOSE 8001

CMD ["uvicorn", "rag_kitcore.api.main:app", "--host", "0.0.0.0", "--port", "8001"]
